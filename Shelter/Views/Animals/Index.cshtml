@{
  Layout = "_Layout";
}

@using Shelter.Models;
@model List<Shelter.Models.Animal>;

<h1>Animals</h1>

@if (@Model.Count == 0)
{
  <h3>No animals have been added yet!</h3>
}
else
{
  <ol>
  @foreach (Animal animal in Model)
    {
      <li>@Html.ActionLink($"{@animal.Name}", "Details", new { id = animal.AnimalId })</li>
      <ul>
        <li>Gender: @animal.Gender</li>
        <li>Date of Admittance: @animal.AdmitDate</li>
        <li>Breed: @animal.Breed</li>
      </ul>
      <br>
    }
  </ol>
}
<br>
<button class="btn btn-primary">@Html.ActionLink("Add new animal tenet", "Create")</button class="btn btn-primary">