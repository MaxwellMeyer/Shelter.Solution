@{
  Layout = "_Layout";
}

@using Shelter.Models;

<h1>Animals</h1>

@if (@Model.Count == 0)
{
  <h3>No animals have been added yet!</h3>
} 
else
{
  <ol>
  @foreach (Animal animal in Model)
  {
    <li>@animal.Name</li>
    <ul>
      <li>@animal.Gender</li>
      <li>@animal.AdmitDate</li>
      <li>@animal.Breed</li>
    </ul>
  }
  </ol>
}